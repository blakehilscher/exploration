%section.light-content
  .inner-section-light-content
    %h1 Bios
    .bh-table
      .bh-actions
        = link_to 'New Bio', new_admin_bio_path
        
    %table.bh-table.table-bios.is-sortable{:data => {:sortable => "/admin/bios/sortable"}}
      %tr
        %th{:width => 50} Position
        %th Name
        %th Title
        %th Bio
        %th Photo
        %th{:width => "140"}
      %tbody.sortable-content
        - @bios.each do |bio|
          %tr{"data-position" => bio.position, :id => "bio_#{bio.id}"}
            %td.position
              .sortable-handle.handle-green Drag
            %td= bio.name
            %td= bio.title
            %td
              .column-content= bio.content.html_safe
            %td= image_tag bio.image_url(:bio_thumb) if bio.image?
            %td.bh-actions
              = link_to 'Edit', edit_admin_bio_path(bio)
              = link_to 'Destroy', admin_bio_path(bio), :class=>'not-important', :confirm => 'Are you sure?', :method => :delete
    .bh-table
      .bh-actions
        = link_to 'New Bio', new_admin_bio_path